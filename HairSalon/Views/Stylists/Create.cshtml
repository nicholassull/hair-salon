@{
  Layout = "_Layout";
}
@model HairSalon.Models.Stylist

<h2>Add a new stylist</h2>
<div class="my-5">
  @using (Html.BeginForm())
  {
    <div class="form-group">
      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name, new { @class = "form-control"})
    </div>
    <div class="form-group">
      @Html.LabelFor(model => model.Specialty)
      @Html.TextBoxFor(model => model.Specialty, new { @class = "form-control"})
    </div>
    <div class="form-group">
      <label for="HourlyRate">Hourly Rate</label>
      @Html.TextBoxFor(model => model.HourlyRate, new { @class = "form-control"})
    </div>
    <input type="submit" value="Add Stylist" class="btn btn-outline-success" />
  }
</div>
@Html.ActionLink("View Stylist", "Index", new {}, new { @class = "btn btn-outline-primary" })
